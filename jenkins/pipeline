#!groovy


pipeline{
    agent{
        label 'master'
    }
    options {
        timestamps()
    }
    stages {
        stage("echo") {
            steps {
                echo "================start now================"
                sh 'pwd'
            }
        }
        stage("clean") {
            steps {
                sh "rm -rf test-ci-cd"
            }
        }
        stage("git clone") {
            steps {
                sh "git clone https://github.com/Shebs1/test-ci-cd" 
            }
        }
        stage("clear docker") {
            steps {
                sh 'docker rm $(docker ps -qa)'
                sh 'docker rmi $(docker images -q)'
            }
        }
        stage("docker min") {
            steps {
                sh 'docker build -t calc_api test-ci-cd/ '
                sh 'docker build run -d -p 5000:5000 calc_api'
            }
        }
    }
}
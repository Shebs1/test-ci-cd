#!groovy


pipeline{
    agent{
        label 'master'
    }
    options {
        timestamps()
    }
    stages {
        stage("echo") {
            steps {
                echo "================start now================"
                sh 'pwd'
            }
        }
        stage("clean") {
            steps {
                sh "rm -rf test-ci-cd"
            }
        }
        stage("git clone") {
            steps {
                sh "git clone https://github.com/Shebs1/test-ci-cd" 
            }
        }
        stage("clear docker") {
            steps {
                sh 'docker rm /$/(docker ps -qa/)'
                sh 'docker rmi $(docker images -q)'
            }
        }
    }
}